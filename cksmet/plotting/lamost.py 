def lamost_teff():
    df = cksmet.io.load_table('lamost-dr2+cks')
    plot(df.cks_steff, df.lamo_steff,'.')
    xlabel('Effective Temperature (K) [CKS]')
    ylabel('Effective Temperature (K) [LAMOST]')

def lamost_dteff():
    df = cksmet.io.load_table('lamost-dr2+cks')
    hist(df.lamo_steff - df.cks_steff,bins=100)
    xlabel('Effective Temperature (K) [CKS]')
    ylabel('Effective Temperature (K) [LAMOST]')

def lamost_smet():
    df = cksmet.io.load_table('lamost-dr2+cks')
    plot(df.cks_smet, df.lamo_smet,'.')
    x = [-0.6,0.6]
    plot(x,x)
    xlim(*x) 
    ylim(*x) 

def lamost_smet_diff():
    df = cksmet.io.load_table('lamost-dr2+cks')
    bins = arange(-1.0,0.6,0.02)
    hist(df.cks_smet - df.lamo_smet, bins=bins)

def compare_lamost_cks():
    df = cksmet.io.load_table('lamost-dr2+cks')
    diff_smet = df.lamo_smet - df.cks_smet
    print "statistics of lamo_smet - cks_smet"
    print diff_smet.describe()
